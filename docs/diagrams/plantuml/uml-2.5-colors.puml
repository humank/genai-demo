@startuml UML 2.5 標準配色定義
' UML 2.5 標準配色定義文件
' 可以被其他 UML 圖表引用

' 類圖標準配色
skinparam class {
    ' 聚合根 - 淺鮭魚色
    BackgroundColor<<AggregateRoot>> #LightSalmon
    BorderColor<<AggregateRoot>> #DC143C
    FontColor<<AggregateRoot>> #000000
    
    ' 實體 - 淺藍色
    BackgroundColor<<Entity>> #LightBlue
    BorderColor<<Entity>> #4682B4
    FontColor<<Entity>> #000000
    
    ' 值對象 - 淺綠色
    BackgroundColor<<ValueObject>> #LightGreen
    BorderColor<<ValueObject>> #228B22
    FontColor<<ValueObject>> #000000
    
    ' 領域事件 - 淺黃色
    BackgroundColor<<DomainEvent>> #LightYellow
    BorderColor<<DomainEvent>> #FFD700
    FontColor<<DomainEvent>> #000000
    
    ' 領域服務 - 淺灰色
    BackgroundColor<<DomainService>> #LightGray
    BorderColor<<DomainService>> #696969
    FontColor<<DomainService>> #000000
    
    ' 應用服務 - 淺灰色
    BackgroundColor<<Service>> #LightGray
    BorderColor<<Service>> #696969
    FontColor<<Service>> #000000
    
    ' 儲存庫 - 淺青色
    BackgroundColor<<Repository>> #LightCyan
    BorderColor<<Repository>> #008B8B
    FontColor<<Repository>> #000000
    
    ' 工廠 - 淺粉色
    BackgroundColor<<Factory>> #LightPink
    BorderColor<<Factory>> #FF1493
    FontColor<<Factory>> #000000
    
    ' 策略 - 淺金黃色
    BackgroundColor<<Policy>> #LightGoldenRodYellow
    BorderColor<<Policy>> #DAA520
    FontColor<<Policy>> #000000
    
    ' 規格 - 淺天藍色
    BackgroundColor<<Specification>> #LightSkyBlue
    BorderColor<<Specification>> #87CEEB
    FontColor<<Specification>> #000000
    
    ' 介面 - 白色
    BackgroundColor<<Interface>> #FFFFFF
    BorderColor<<Interface>> #000000
    FontColor<<Interface>> #000000
    
    ' 抽象類 - 淺灰色
    BackgroundColor<<Abstract>> #F5F5F5
    BorderColor<<Abstract>> #808080
    FontColor<<Abstract>> #000000
}

' 時序圖標準配色
skinparam participant {
    BackgroundColor #E6F3FF
    BorderColor #4682B4
    FontStyle bold
}

skinparam actor {
    BackgroundColor #FFE6E6
    BorderColor #DC143C
    FontStyle bold
}

skinparam boundary {
    BackgroundColor #E6FFE6
    BorderColor #228B22
    FontStyle bold
}

skinparam control {
    BackgroundColor #FFFFE6
    BorderColor #DAA520
    FontStyle bold
}

skinparam entity {
    BackgroundColor #FFE6FF
    BorderColor #FF1493
    FontStyle bold
}

skinparam database {
    BackgroundColor #E6E6FF
    BorderColor #4B0082
    FontStyle bold
}

' 激活樣式
skinparam sequenceLifeLineBorderColor #4682B4
skinparam sequenceLifeLineBackgroundColor #F0F8FF

' 通用樣式設定
skinparam classAttributeIconSize 0
skinparam classFontStyle bold
skinparam packageStyle rectangle
skinparam roundcorner 20
skinparam shadowing false

@enduml