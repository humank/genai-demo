{
    "mcpServers": {
        "github": {
            "command": "uvx",
            "args": [
                "mcp-proxy",
                "--transport",
                "streamablehttp",
                "--headers",
                "Authorization",
                "Bearer YOUR_GITHUB_TOKEN_HERE",
                "https://api.githubcopilot.com/mcp/"
            ],
            "disabled": false,
            "autoApprove": [
                "list_issues",
                "get_issue",
                "get_issue_comments",
                "create_pull_request",
                "get_me",
                "get_pull_request",
                "search_pull_requests",
                "update_pull_request"
            ]
        },
        "fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ],
            "env": {},
            "disabled": true,
            "autoApprove": [
                "fetch"
            ]
        },
        "sqlite": {
            "command": "uvx",
            "args": [
                "mcp-server-sqlite"
            ],
            "env": {},
            "disabled": true,
            "autoApprove": [
                "query",
                "list_tables",
                "describe_table",
                "read_query"
            ]
        }
    }
}