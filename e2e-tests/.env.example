# Staging Test Environment Configuration Example
# Copy this file to .env and update with your actual values

# ============================================================================
# API Configuration
# ============================================================================
STAGING_API_URL=https://api-staging.example.com
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1.0

# ============================================================================
# Authentication Configuration
# ============================================================================
# Options: bearer, basic, api_key
AUTH_TYPE=bearer

# Bearer Token Authentication
AUTH_TOKEN=your_bearer_token_here

# Basic Authentication
# AUTH_USERNAME=your_username
# AUTH_PASSWORD=your_password

# API Key Authentication
# AUTH_API_KEY=your_api_key_here

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=ap-northeast-1
# AWS_PROFILE=staging  # Optional: Use specific AWS profile

# AWS Credentials (if not using profile)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================================================
# Test Configuration
# ============================================================================
TEST_DATA_DIR=./test-data
TEST_REPORT_DIR=./reports
ENABLE_PERFORMANCE_METRICS=true

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=staging_db
DB_USER=staging_user
DB_PASSWORD=staging_password

# Aurora Global Database (Multi-Region)
DB_PRIMARY_HOST=staging-aurora-primary.cluster-xxx.ap-northeast-1.rds.amazonaws.com
DB_SECONDARY_HOST=staging-aurora-secondary.cluster-yyy.ap-northeast-1.rds.amazonaws.com

# ============================================================================
# Cache Configuration (Redis/ElastiCache)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password  # Optional

# ElastiCache Configuration
ELASTICACHE_PRIMARY_ENDPOINT=staging-redis-primary.xxx.cache.amazonaws.com
ELASTICACHE_SECONDARY_ENDPOINT=staging-redis-secondary.yyy.cache.amazonaws.com

# ============================================================================
# Messaging Configuration (Kafka/MSK)
# ============================================================================
KAFKA_BROKERS=localhost:9092

# MSK Configuration
MSK_BOOTSTRAP_SERVERS=b-1.staging-msk.xxx.kafka.ap-northeast-1.amazonaws.com:9092,b-2.staging-msk.xxx.kafka.ap-northeast-1.amazonaws.com:9092

# ============================================================================
# Monitoring Configuration
# ============================================================================
CLOUDWATCH_LOG_GROUP=/aws/staging/application
CLOUDWATCH_NAMESPACE=Staging/Application
XRAY_DAEMON_ADDRESS=localhost:2000

# ============================================================================
# Performance Test Configuration
# ============================================================================
LOAD_TEST_DURATION=300
LOAD_TEST_USERS=100
LOAD_TEST_RAMP_UP=60

# ============================================================================
# Security Test Configuration
# ============================================================================
SECURITY_SCAN_ENABLED=true
OWASP_ZAP_API_KEY=your_zap_api_key
OWASP_ZAP_URL=http://localhost:8080

# ============================================================================
# Cost Management Configuration
# ============================================================================
COST_ALERT_THRESHOLD=1000
COST_REPORT_EMAIL=team@example.com

# ============================================================================
# Disaster Recovery Configuration
# ============================================================================
DR_RTO_TARGET=120  # seconds
DR_RPO_TARGET=1    # seconds
DR_TEST_ENABLED=true

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_CROSS_REGION_TESTS=true
ENABLE_CHAOS_ENGINEERING=false
ENABLE_SECURITY_SCANS=true
ENABLE_PERFORMANCE_TESTS=true
