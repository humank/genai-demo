{
  "name": "genai-demo-infrastructure",
  "version": "1.0.0",
  "description": "GenAI Demo Infrastructure using AWS CDK v2",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "clean": "rm -rf dist/ cdk.out/ node_modules/.cache/ .jest-cache/ tsconfig.tsbuildinfo",
    "clean:cache": "rm -rf node_modules/.cache/ .jest-cache/ tsconfig.tsbuildinfo",
    "prebuild": "npm run clean:cache",
    "build": "tsc",
    "build:clean": "npm run clean && npm install && npm run build",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit --coverage",
    "test:integration": "jest --testPathPatterns=integration --coverage",
    "test:compliance": "jest --testPathPatterns=cdk-nag-suppressions",
    "test:consolidated": "jest --testPathPatterns=consolidated-stack",
    "test:all": "jest --coverage --ci --watchAll=false",
    "test:watch": "jest --watch",
    "test:quick": "jest --testPathPatterns=\"consolidated-stack|unit/\"",
    "pretest": "npm run clean:cache",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:all": "cdk synth --all",
    "diff": "cdk diff",
    "deploy": "./deploy-unified.sh",
    "deploy:all": "./deploy-unified.sh full",
    "deploy:foundation": "./deploy-unified.sh foundation",
    "deploy:data": "./deploy-unified.sh data",
    "deploy:compute": "./deploy-unified.sh compute",
    "deploy:security": "./deploy-unified.sh security",
    "deploy:observability": "./deploy-unified.sh observability",
    "deploy:analytics": "./deploy-unified.sh analytics",
    "deploy:dev": "./deploy-unified.sh full -e development",
    "deploy:staging": "./deploy-unified.sh full -e staging --enable-analytics",
    "deploy:prod": "./deploy-unified.sh full -e production --enable-analytics --enable-multi-region",
    "deploy:iam-security": "./deploy-iam-security.sh",
    "deploy:consolidated": "./deploy-consolidated.sh",
    "status": "./deploy-unified.sh --status",
    "destroy": "./deploy-unified.sh --destroy",
    "destroy:dev": "./deploy-unified.sh --destroy -e development",
    "validate": "npm run build && npm run test:all && npm run synth:all",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.53.0",
    "aws-cdk": "^2.1100.2",
    "cdk-nag": "^2.37.55",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@aws-cdk/lambda-layer-kubectl-v28": "^2.2.1",
    "aws-cdk-lib": "^2.233.0",
    "constructs": "^10.4.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/genai-demo"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure",
    "genai",
    "typescript"
  ],
  "license": "MIT",
  "overrides": {
    "glob": "^11.0.0"
  }
}
