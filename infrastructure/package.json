{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "clean": "rm -rf dist/ cdk.out/ node_modules/.cache/ .jest-cache/ tsconfig.tsbuildinfo",
    "clean:cache": "rm -rf node_modules/.cache/ .jest-cache/ tsconfig.tsbuildinfo && npm run clean:ts-node",
    "clean:ts-node": "rm -rf node_modules/.cache/ts-node/",
    "prebuild": "npm run clean:cache",
    "build": "tsc",
    "build:clean": "npm run clean && npm install && npm run build",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:snapshot": "jest --testPathPattern=snapshot",
    "test:compliance": "jest --testPathPattern=compliance",
    "test:comprehensive": "jest --testPathPattern=comprehensive-validation --coverage",
    "test:all": "jest --coverage --ci --watchAll=false",
    "test:watch": "jest --watch",
    "test:ci": "npm run test:all && npm run test:snapshot",
    "test:update-snapshots": "jest --testPathPattern=snapshot --updateSnapshot",
    "test:drift-detection": "jest --testPathPattern=snapshot --verbose",
    "pretest": "npm run clean:cache",
    "cdk": "cdk",
    "synth": "npm run clean:ts-node && cdk synth",
    "synth:all": "npm run clean:ts-node && cdk synth --all",
    "synth:validate": "npm run synth:all && npm run validate:templates",
    "synth:clean": "npm run clean:cache && npm run synth:all",
    "diff": "npm run clean:ts-node && cdk diff",
    "deploy": "npm run clean:ts-node && cdk deploy",
    "deploy:clean": "npm run clean:cache && cdk deploy",
    "destroy": "cdk destroy",
    "docs:generate": "node scripts/generate-docs.js",
    "security:scan": "node scripts/security-scan.js",
    "cost:estimate": "node scripts/cost-estimation.js",
    "validate": "npm run build && npm run test:ci && npm run synth:validate && npm run security:scan",
    "validate:templates": "node scripts/validate-templates.js",
    "validate:comprehensive": "npm run test:comprehensive && npm run validate:templates && npm run cost:estimate",
    "ci:full-validation": "npm run validate && npm run docs:generate",
    "budget:configure": "node scripts/configure-budget.js",
    "drift:detect": "npm run test:drift-detection",
    "performance:analyze": "node scripts/analyze-performance.js",
    "troubleshoot": "npm run clean:cache && npm run build:clean && npm run synth:clean",
    "dr:test-failover": "node scripts/dr-automation-test.js test-failover",
    "dr:test-chaos": "node scripts/dr-automation-test.js test-chaos",
    "dr:validate": "node scripts/dr-automation-test.js validate",
    "dr:report": "node scripts/dr-automation-test.js report",
    "well-architected:assessment": "node scripts/well-architected-assessment.js",
    "mcp:test": "node scripts/mcp-integration-test.js",
    "architecture:assess": "node scripts/automated-architecture-assessment.js",
    "monitoring:continuous": "node scripts/continuous-improvement-monitor.js",
    "mcp:setup": "echo 'MCP tools configured in .kiro/settings/mcp.json'",
    "assessment:complete": "bash scripts/run-complete-assessment.sh"
  },
  "devDependencies": {
    "@aws-cdk/aws-budgets": "^1.204.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "2.1029.0",
    "aws-sdk": "^2.1691.0",
    "cdk-nag": "^2.27.198",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.0",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.208.0",
    "constructs": "^10.0.0",
    "commander": "^12.0.0"
  }
}